{
  "openapi": "3.0.1",
  "info": {
    "title": "Aphrodite API",
    "description": "API Description",
    "version": "1.0.0"
  },
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "servers": [
    {
      "url": "http://localhost:8000",
      "description": "Development Environment"
    },
    {
      "url": "http://test.aphrodite.com",
      "description": "Test Environment"
    }
  ],
  "paths": {
    "/v1/send-code": {
      "post": {
        "summary": "send-code auth",
        "description": "Send Verification Code",
        "tags": [
          "Auth"
        ],
        "responses": {
          "200": {
            "description": "successful"
          }
        }
      }
    },
    "/v1/login": {
      "post": {
        "summary": "login auth",
        "description": "User Registration/Login",
        "tags": [
          "Auth"
        ],
        "responses": {
          "200": {
            "description": "successful"
          }
        }
      }
    },
    "/v1/logout": {
      "post": {
        "summary": "logout auth",
        "description": "User Logout",
        "tags": [
          "Auth"
        ],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "successful"
          }
        }
      }
    }
  }
}